# ============================================
# MR BunkManager - Backend Environment Variables
# ============================================
#
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control
#

# Server Configuration
PORT=3000
NODE_ENV=development

# Firebase Configuration
# You can leave this blank if using service account key file
FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com

# Optional: API Key for securing endpoints (recommended for production)
# API_KEY=your-secure-api-key-here

# Timezone (default: Asia/Kolkata for IST)
TZ=Asia/Kolkata
