{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.js"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "TIMEZONE": "Asia/Kolkata"
  },
  "crons": [
    {
      "path": "/send-daily-reminders",
      "schedule": "0 20 * * *"
    },
    {
      "path": "/send-class-reminders?minutesBefore=30",
      "schedule": "* * * * *"
    },
    {
      "path": "/send-class-reminders?minutesBefore=10",
      "schedule": "* * * * *"
    }
  ]
}
